import sys
from bin import _mypath
import socket

def main(args):
	   hostname = args[1]
	   port = args[2]
	   s = socket.socket(socket.AF_INET, socket.SOCK_STREAM)  
	   s.connect((str(hostname), int(port))
	   s.send("GET / HTTP/1.0\r\n\r\n")
	   while 1:
	       buf = s.recv(1000)
	       if not buf:
	       		break
	       sys.stdout.write(buf)

	       s.close()

if __name__ == '__main__':
	   main(sys.argv)
